@model IEnumerable<BlogSystem.Models.Article>
@{
    ViewBag.Title = "Index";
}

<p>
    @using (Html.BeginForm("Index", "Article", FormMethod.Get))
    {
    <p class="well col-lg-12">
        @Html.TextBox("SearchString", null, new { @class = "search-option col-lg-4" }) <br />
        <input type="submit" name="submit" value="Search" class="filter-bar btn btn-default" />
    </p>
    }
    </p>

    @if (!Request["submit"].IsEmpty())
            {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th></th>
            </tr>

            @foreach (var article in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(article.Title, "Details", "Article", new { @id = article.Id }, new { @class = "btn btn-default btn-xs" })
                    </td>
                </tr>
            }

        </table>
    }